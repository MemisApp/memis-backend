generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  firstName    String
  lastName     String
  email        String   @unique
  phone        String?
  passwordHash String
  role         Role     @default(CAREGIVER)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  caregivers PatientCaregiver[]
  sessions   UserSession[]
  createdRooms Room[]
  roomMembers  RoomMember[]
  createdThreads Thread[]
  authoredMessages Message[]
}

model UserSession {
  id               String   @id @default(cuid())
  userId           String
  refreshTokenHash String
  userAgent        String?
  ip               String?
  createdAt        DateTime @default(now())
  expiresAt        DateTime
  revokedAt        DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Patient {
  id          String    @id @default(cuid())
  firstName   String
  lastName    String
  birthDate   DateTime?
  avatarUrl   String?
  shortIntro  String?
  maritalDate DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  caregivers  PatientCaregiver[]
  reminders   Reminder[]
  contacts    Contact[]
  devices     Device[]
  PairingCode PairingCode[]
}

model PatientCaregiver {
  id          String        @id @default(cuid())
  patientId   String
  caregiverId String
  role        CaregiverRole @default(OWNER)
  createdAt   DateTime      @default(now())

  patient   Patient @relation(fields: [patientId], references: [id], onDelete: Cascade)
  caregiver User    @relation(fields: [caregiverId], references: [id], onDelete: Cascade)

  @@unique([patientId, caregiverId])
}

model PairingCode {
  id        String    @id @default(cuid())
  patientId String
  code      String    @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdBy String // caregiver user id
  createdAt DateTime  @default(now())

  patient Patient @relation(fields: [patientId], references: [id], onDelete: Cascade)
}

model Device {
  id               String    @id @default(cuid())
  patientId        String
  platform         String // ios | android | web
  devicePublicId   String
  deviceName       String?
  refreshTokenHash String?
  isPrimary        Boolean   @default(false)
  lastSeenAt       DateTime?
  createdAt        DateTime  @default(now())

  patient Patient @relation(fields: [patientId], references: [id], onDelete: Cascade)

  @@unique([patientId, devicePublicId])
  @@index([patientId])
}

model Reminder {
  id          String    @id @default(cuid())
  patientId   String
  type        String // PILLS | DOOR_LOCK | TEETH | PET_CARE | CUSTOM
  title       String
  notes       String?
  schedule    String? // cron arba HH:MM
  isActive    Boolean   @default(true)
  lastFiredAt DateTime?
  completed   Boolean   @default(false)
  completedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  patient Patient @relation(fields: [patientId], references: [id], onDelete: Cascade)

  @@index([patientId])
}

model Contact {
  id        String   @id @default(cuid())
  patientId String
  relation  String // SISTER | SPOUSE | CHILD | FRIEND | OTHER
  name      String
  phone     String
  photoUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  patient Patient @relation(fields: [patientId], references: [id], onDelete: Cascade)

  @@index([patientId])
}

enum Role {
  CAREGIVER
  PATIENT
  ADMIN
}

enum CaregiverRole {
  OWNER
  EDITOR
  VIEWER
}

enum RoomVisibility {
  PRIVATE
  PUBLIC
}

enum RoomMemberRole {
  OWNER
  MODERATOR
  MEMBER
}

model Room {
  id           String          @id @default(cuid())
  name         String
  visibility   RoomVisibility  @default(PRIVATE)
  createdById  String
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  createdBy    User            @relation(fields: [createdById], references: [id], onDelete: Cascade)
  members      RoomMember[]
  threads      Thread[]

  @@index([createdById])
}

model RoomMember {
  id       String          @id @default(cuid())
  roomId   String
  userId   String
  role     RoomMemberRole  @default(MEMBER)
  joinedAt DateTime        @default(now())

  room     Room @relation(fields: [roomId], references: [id], onDelete: Cascade)
  user     User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([roomId, userId])
  @@index([userId])
}

model Thread {
  id          String   @id @default(cuid())
  roomId      String
  title       String
  createdById String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  room        Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  createdBy   User     @relation(fields: [createdById], references: [id], onDelete: SetNull)
  messages    Message[]

  @@index([roomId])
}

model Message {
  id        String   @id @default(cuid())
  threadId  String
  authorId  String
  content   String
  editedAt  DateTime?
  createdAt DateTime @default(now())

  thread    Thread @relation(fields: [threadId], references: [id], onDelete: Cascade)
  author    User   @relation(fields: [authorId], references: [id], onDelete: SetNull)

  @@index([threadId])
  @@index([authorId])
}
